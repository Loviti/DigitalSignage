model File {
    id                     String    @id @default(uuid())
    workspaceId            String
    name                   String
    extension              String
    mimeType               String
    previewPath            String?
    size                   BigInt
    type                   String
    path                   String    @unique
    width                  Int?
    height                 Int?
    duration               Int?
    defaultDuration        Int?
    codec                  String?
    processingStatus       String?
    folderId               String?
    folderIdBeforeDeletion String?
    availabilityStartAt    DateTime?
    availabilityEndAt      DateTime?
    createdAt              DateTime  @default(now())
    updatedAt              DateTime  @updatedAt
    deletedAt              DateTime?
    forceDeleteRequestedAt DateTime?
    uploaderId             String?
    uploadSessionId        String?

    folder               Folder?        @relation("Files", fields: [folderId], references: [id], onDelete: Cascade)
    folderBeforeDeletion Folder?        @relation("DeletedFiles", fields: [folderIdBeforeDeletion], references: [id], onDelete: SetNull)
    workspace            Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
    uploader             User?          @relation(fields: [uploaderId], references: [id], onDelete: SetNull)
    playlistItems        PlaylistItem[]
    uploadSession        FileUploadSession? @relation(fields: [uploadSessionId], references: [id], onDelete: SetNull)
    
    @@index([workspaceId])
    @@index([folderId])
    @@index([uploaderId])
    @@index([deletedAt])
    @@index([name])
}
