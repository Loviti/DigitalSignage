{
	"name": "screenlite",
	"type": "module",
	"scripts": {
		"build": "rimraf dist && mkdir dist && npx swc src -d dist --strip-leading-paths",
		"start": "env-cmd -f .env node dist/screenlite.js",
		"dev": "env-cmd -f .env tsx watch src/screenlite.ts",
		"client:dev": "npm run dev -w client",
		"client:build": "npm run build -w client",
		"lint": "eslint --fix",
		"db:deploy": "npx prisma migrate deploy && npx prisma generate"
	},
	"prisma": {
		"schema": "./prisma"
	},
	"devDependencies": {
		"@eslint/js": "^9.22.0",
		"@stylistic/eslint-plugin-ts": "^4.2.0",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.11.9",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/fluent-ffmpeg": "^2.1.27",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.13.10",
		"@types/pg": "^8.11.11",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"@types/uuid": "^10.0.0",
		"concurrently": "^9.1.2",
		"eslint": "^9.22.0",
		"globals": "^16.0.0",
		"nodemon": "^3.1.9",
		"prisma": "^6.8.2",
		"rimraf": "^6.0.1",
		"tsc-alias": "^1.8.11",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.758.0",
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@ffprobe-installer/ffprobe": "^2.1.2",
		"@prisma/adapter-pg": "^6.8.2",
		"@prisma/client": "^6.8.2",
		"@smithy/node-http-handler": "^4.0.3",
		"@smithy/types": "^4.1.0",
		"@socket.io/redis-adapter": "^8.3.0",
		"@types/bcrypt": "^5.0.2",
		"bcrypt": "^5.1.1",
		"body-parser": "^1.20.3",
		"bullmq": "^5.43.0",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"env-cmd": "^10.1.0",
		"express": "^4.21.2",
		"fluent-ffmpeg": "^2.1.3",
		"i18next": "^24.2.3",
		"i18next-fs-backend": "^2.6.0",
		"i18next-http-middleware": "^3.7.1",
		"ioredis": "^5.6.0",
		"mime": "^4.0.6",
		"multer": "^2.0.0",
		"pg": "^8.14.0",
		"sharp": "^0.33.5",
		"socket.io": "^4.8.1",
		"tsconfig-paths": "^4.2.0",
		"uuid": "^11.1.0",
		"zod": "^3.24.2"
	}
}
